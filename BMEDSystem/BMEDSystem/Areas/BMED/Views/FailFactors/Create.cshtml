@model EDIS.Models.FailFactorModel

@{
    ViewBag.Title = "新增/故障原因選單";
    Layout = "~/Views/Shared/_PassedLayout.cshtml";
}

<h2>新增</h2>

<script src="~/js/BMED/QuestionnaireCreate.js" asp-append-version="true"></script>


<form asp-action="Create" data-ajax="true"
      data-ajax-method="POST"
      data-ajax-begin="$.Toast.showToast({
      'title':'作業進行中，請稍待...',
      'icon':'loading',
      'duration':0
      })"
      data-ajax-failure="onFailed"
      data-ajax-success="onSuccess()">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>故障原因選單</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Flg, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.RadioButtonFor(model => model.Flg, "Y")有效
                @Html.RadioButtonFor(model => model.Flg, "N")無效
                @Html.ValidationMessageFor(model => model.Flg, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="btn" type="submit" value="確定送出" class="btn btn-default" data-request-url="@Url.Action("Index", "FailFactors",new { Area ="BMED"})" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("回到列表", "Index")
</div>
