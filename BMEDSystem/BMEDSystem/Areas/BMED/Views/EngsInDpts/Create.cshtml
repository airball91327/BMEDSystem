@model EDIS.Models.EngsInDptsModel

@{
    Layout = "~/Views/Shared/_PassedLayout.cshtml";
    ViewData["Title"] = "新增";
}

<link href="~/css/bootstrap-combobox.css" rel="stylesheet" />
<script src="~/js/bootstrap-combobox.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('.combobox').combobox();
    });
</script>

<h2>新增</h2>

<h4>部門對應工程師</h4>
<hr />
<div class="row">
    <div class="col-md-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="AccDptId" class="control-label"></label>
                    <select asp-for="AccDptId" asp-items="@ViewData["AccDptId"] as SelectList" class="form-control combobox">
                        <option value="" selected disabled>請選擇</option>
                    </select>
                    <span asp-validation-for="AccDptId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <select asp-for="EngId" asp-items="@ViewData["EngId"] as SelectList" class="form-control combobox">
                    <option value="" selected disabled>請選擇</option>
                </select>
                <span asp-validation-for="EngId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="新增" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">回到列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
