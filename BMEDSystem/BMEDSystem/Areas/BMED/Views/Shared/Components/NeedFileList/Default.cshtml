@model IEnumerable<EDIS.Models.NeedFileModel>
<html>
<head>
    <script src="~/js/BMED/MutiFileUpload.js"></script>
    <title></title>
</head>
@{
    ViewBag.Title = "Index";
}
<body>
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SeqNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileDes)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SeqNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FileDes)
                </td>
                <td>
                    <a class="button" href="@Url.Content("~/BMED/AssetFile/Create?id=" + ViewData["ano"] +
            "&sno=" + item.SeqNo + "&title=" + item.Title)"
                       id="AssetFileChooseLink">上傳檔案</a>
                    <a class="button" href="@Url.Content("~/BMED/AssetFile/CopyTo?id=" + ViewData["ano"] +
            "&sno=" + item.SeqNo)"
                       id="AssetFileCopyLink">複製檔案</a>
                </td>
            </tr>
            <tr>
                <td colspan="4">
                    <div id="@Html.Raw("AssetFileList"+ViewData["ano"]+item.Title)">
                        @await Component.InvokeAsync("AssetFileList", new { id = ViewData["ano"], title = item.Title })
                    </div>
                </td>
            </tr>
        }

    </table>
</body>
</html>

