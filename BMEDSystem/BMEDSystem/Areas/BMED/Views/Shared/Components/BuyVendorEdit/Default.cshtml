@model EDIS.Models.BuyVendorModel

<h2>設定邀標廠商</h2>

<form asp-action="Edit" asp-controller="BuyVendor" asp-area="BMED" data-ajax="true"
      data-ajax-update="#BuyVendorPanel" data-ajax-method="POST"
      data-ajax-begin="$.Toast.showToast({
      'title':'作業進行中，請稍待...',
      'icon':'loading',
      'duration':0
      })"
      data-ajax-complete="$.Toast.hideToast()">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @Html.HiddenFor(model => model.DocId)
    @Html.HiddenFor(model => model.VendorNo)

    <div class="editor-field">
        @await Html.PartialAsync("_ChooseVendor")
    </div>

    <div class="editor-label">
        <label asp-for="VendorNam" class="control-title"></label>
    </div>
    <div class="editor-field">
        <input asp-for="VendorNam" class="form-control" />
        <span asp-validation-for="VendorNam" class="text-danger"></span>
    </div>

    <div class="editor-label">
        <label asp-for="UniteNo" class="control-title"></label>
    </div>
    <div class="editor-field">
        <input asp-for="UniteNo" class="form-control" />
        <span asp-validation-for="UniteNo" class="text-danger"></span>
    </div>

    <div style="padding-top: 7px;">
        <input class="btn btn-primary" type="submit" value="加入廠商" />
    </div>

</form>
