@model IEnumerable<EDIS.Areas.FORMS.Models.OutsideBmedListModel>


<script src="~/js/FORMS/OutsideBmedFlow.js" asp-append-version="true"></script>
<script src="~/js/Rel.js"></script>

@if (Model.Count() <= 0)
{
    <p class="text-danger">無任何資料!</p>

}
else
{
    <div class="row  over card mt-3">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="card-header">申請案件列表</div>
                <div class="card-body">
                    <table class="table table-striped table-bordered table-hover dataTables">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.DocType)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DocId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UserName)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.ApplyDate)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Rtt)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DocType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DocId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>


                                    <td>
                                        @Html.DisplayFor(modelItem => item.ApplyDate)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rtt)
                                    </td>

                                    <td>
                                        @if (item.Cls == "醫工工程師" && item.Status == "待簽核")
                                        {
                                            @Html.ActionLink("編輯", "OutsideBmedEdit", "OutsideBmed", new { @id = item.DocId, kind = item.Kind }, new { target = "blank" })
                                            @Html.Raw(" | ")
                                        }
                                        else if (item.Status != "流程中")
                                        {
                                            @Html.ActionLink("編輯", "Edit", "OutsideBmed", new { @id = item.DocId }, new { target = "blank" })
                                            @Html.Raw(" | ")
                                        }

                                        @Html.ActionLink("預覽", "Details", "OutsideBmed", new { @id = item.DocId }, new { target = "_blank" })

                                        @if (item.Cls == "申請者" && item.Status == "待簽核")
                                        {
                                            @Html.Raw(" | ")
                                            @Html.ActionLink("廢除", "Delete", "OutsideBmed", new { @id = item.DocId }, new { target = "blank" })
                                        }
                                        @Html.Raw(" | ")
                                        @Html.ActionLink("列印", "PrintRepairDoc", "OutsideBmed", new { Area = "FORMS", DocId = item.DocId }, new { target = "_blank" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.DocType)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DocId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UserName)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.ApplyDate)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Rtt)
                                </th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
<style>
    .over {
        overflow: scroll;
        overflow-y: hidden;
    }
</style>


