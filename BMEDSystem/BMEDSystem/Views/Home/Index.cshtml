@model EDIS.Models.UnsignCounts
@{
    Layout = "~/Views/Shared/_PassedLayout.cshtml";
}
<script>
    $(function () {
        $("#BMEDrepSearchForm").submit();
    });
    var onFailed = function (data) {
        alert(data.responseText);
        $.Toast.hideToast();
    };
</script>
<h4>簽核列表</h4>
<ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#menu1">請修 <span class="badge" id="BMEDrepCount">@Model.RepairCount</span></a></li>
    <li><a data-toggle="tab" href="#menu2">保養 <span class="badge" id="BMEDkeepCount">@Model.KeepCount</span></a></li>
    <li><a data-toggle="tab" href="#menu3">驗收 <span class="badge" id="BMEDdelivCount">@Model.DeliveryCount</span></a></li>
    <li><a data-toggle="tab" href="#menu4">採購評估 <span class="badge" id="BMEDbuyCount">@Model.BuyEvalateCount</span></a></li>
</ul>

<div class="tab-content">

    <div id="menu1" class="tab-pane fade in active">
        <div>
            @await Component.InvokeAsync("BMEDRepIndex")
        </div>
    </div>
    <div id="menu2" class="tab-pane fade">
        <div>
            @await Component.InvokeAsync("BMEDKeepIndex")
        </div>
    </div>
    <div id="menu3" class="tab-pane fade">
        <div>
            @await Component.InvokeAsync("BMEDDeliveryIndex")
        </div>
    </div>
    <div id="menu4" class="tab-pane fade">
        <div>
            @await Component.InvokeAsync("BuyEvaluateIndex")
        </div>
    </div>

</div>
